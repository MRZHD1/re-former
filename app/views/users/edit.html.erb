<% flash.each do |key, value| %>
 <%= content_tag(:div, class: "alert alert-#{key} alert-dismissable") do %>
  <%= value %>
  <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>   
 <% end %> 
<% end %>
<%= form_for @user do |form| %>
    <%= label_tag(:username, "Username:") %>
    <%= form.text_field :username, placeholder: "johndoe13" %>
    <%= label_tag(:email, "E-mail:") %>
    <%= form.text_field :email, placeholder: "johndoe13@gmail.com"  %>
    <%= label_tag(:password, "Password:") %>
    <%= form.password_field(:password, placeholder: "********") %>
    <%= form.submit %>
<% end %>